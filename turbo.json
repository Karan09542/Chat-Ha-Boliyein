{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["GEMINI_API_KEY"],
  "tasks": {
    "build": {
      "env": ["GEMINI_API_KEY","REDIS_URL", "REDIS_PASSWORD", "NODE_ENV", "DB_URL", "DB_PASSWORD"],	
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["GEMINI_API_KEY","REDIS_URL", "REDIS_PASSWORD" , "NODE_ENV", "DB_URL", "DB_PASSWORD"]
    }
  }
}
